<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_bg"
    tools:context=".QuizStart">

    <Button
        android:id="@+id/homeButton"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/baseline_home_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="216dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:src="@drawable/_364302" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/titanone_regular"
            android:gravity="center"
            android:text="Meet Your Pawfect Match!"
            android:textColor="@color/purple"
            android:textSize="45dp" />

        <Button
            android:id="@+id/start"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/neucha_regular"
            android:text="START QUIZ"
            android:textColor="@color/white"
            android:textSize="24sp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
