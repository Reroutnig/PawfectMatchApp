<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/results_bg"
    tools:context=".QuizResults">

        <!-- Include the layout for Chihuahua -->
        <include
            android:id="@+id/layoutChihuahua"
            layout="@layout/quiz_results_chihuahua"
            android:visibility="gone"/>

        <!-- Include the layout for Beagle -->
        <include
            android:id="@+id/layoutBeagle"
            layout="@layout/quiz_results_beagle"
            android:visibility="gone"/>

        <!-- Include the layout for Labrador -->
        <include
            android:id="@+id/layoutLabrador"
            layout="@layout/quiz_results_labrador"
            android:visibility="gone"/>

        <!-- Include the layout for German Shepherd -->
        <include
            android:id="@+id/layoutGermanShepherd"
            layout="@layout/quiz_results_german_shepherd"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>